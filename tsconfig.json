{
    "include": [
        "./src/**/*",
        "emotion.d.ts"
    ],
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "noImplicitAny": false,
        "alwaysStrict": false
    }
}